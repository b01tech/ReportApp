<Window x:Class="ReportApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportApp.Views"
        mc:Ignorable="d"
        Title="Report" Height="1024" Width="1440" MinHeight="1024" MinWidth="1440"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="8" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Label Content="N° DO CERTIFICADO:"  VerticalAlignment="Bottom" FontSize="24" FontWeight="Bold"/>
                <TextBox x:Name="txtReportId"  Grid.Column="1" VerticalAlignment="Bottom" Width="250" Height="36" FontSize="18"/>                
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnSearch" Content="BUSCAR" VerticalAlignment="Bottom" Margin="36,0"/>
                <Button x:Name="btnSave" Content="SALVAR" VerticalAlignment="Bottom" Margin="36,0"/>
                <Button x:Name="btnPrint" Content="IMPRIMIR" VerticalAlignment="Bottom" Margin="36,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3" Background="{StaticResource SecondaryBrush}" Margin="16,16,16,80" VerticalAlignment="Stretch">
            <Label Content="Dados do cliente" FontSize="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="CLIENTE:"/>
                <TextBox x:Name="txtCustomerName" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="ENDEREÇO:"/>
                <TextBox x:Name="txtAddress" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="CIDADE:"/>
                <TextBox x:Name="txtCity" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="UF:"/>
                <TextBox x:Name="txtState" Width="250"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="4" Background="{StaticResource SecondaryBrush}" Margin="16,36,16,72">
            <Label Content="Dados do Equipamento" FontSize="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="FABR./MODELO:"/>
                <TextBox x:Name="txtModel" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="N° DE SÉRIE:"/>
                <TextBox x:Name="txtSerialNo" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="TAG:"/>
                <TextBox x:Name="txtTagName" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="CLASSE:"/>
                <TextBox x:Name="txtScaleClass" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="CAPACIDADE:"/>
                <TextBox x:Name="txtCapacity" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="RESOLUÇÂO:"/>
                <Label Content="d=:"/>
                <TextBox x:Name="txtResolutionD"/>
                <Label Content="e=:"/>
                <TextBox x:Name="txtResolutionE"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="UNIDADE:"/>
                <TextBox x:Name="txtUnit" Width="250"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="4" Background="{StaticResource SecondaryBrush}" Margin="16,48,16,60">
            <Label Content="Dados da Calibração" FontSize="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="LOCAL:"/>
                <TextBox x:Name="txtPlace" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="DATA EXECUÇÃO:"/>
                <TextBox x:Name="txtDataEx" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="EXECUTOR:"/>
                <TextBox x:Name="txtTechnician" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="DATA EMISSÃO:"/>
                <TextBox x:Name="txtDataem" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="RESPONSÁVEL:"/>
                <TextBox x:Name="txtManager" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="SITUAÇÂO DO INSTRUMENTO:"/>
                <TextBox x:Name="txtStatusReport"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="2" Background="{StaticResource SecondaryBrush}" Margin="72,16,16,36">
            <Label Content="Repetibilidade" FontSize="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="PESO APLICADO:"/>
                <TextBox x:Name="txtRepMassApply"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="LEITURA 1:"/>
                <TextBox x:Name="txtRepRead1"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="LEITURA 2:"/>
                <TextBox x:Name="txtRepRead2"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="2" Background="{StaticResource SecondaryBrush}" Margin="72,16,16,36">
            <Label Content="Mobilidade" FontSize="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="LEITURA SEM SOBRECARGA:"/>
                <TextBox x:Name="txtMobReadBefore"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="SOBRECARGA APLICADA:"/>
                <TextBox x:Name="txtMobOverLoad"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="APÓS A SOBRECARGA:"/>
                <TextBox x:Name="txtMobReadAfter"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="6" Background="{StaticResource SecondaryBrush}" Margin="72,16,16,72">
            <Label Content="Excentricidade" FontSize="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="TIPO DE ENSAIO:"/>
                <TextBox x:Name="r"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="PESO APLICADO:"/>
                <TextBox x:Name="e"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="A:"/>
                <TextBox x:Name="txtEccReadA"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="B:"/>
                <TextBox x:Name="txtEccReadB"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="C:"/>
                <TextBox x:Name="txtEccReadC"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="D:"/>
                <TextBox x:Name="txtEccReadD"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="E:"/>
                <TextBox x:Name="txtEccReadE"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="F:"/>
                <TextBox x:Name="txtEccReadF"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="3" Grid.RowSpan="6" Background="{StaticResource SecondaryBrush}" Margin="16,16,16,60">
            <Label Content="Teste de Pesagem" FontSize="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="CARGA" HorizontalAlignment="Center" Margin="36,0"/>
                <Label Content="LEITURA" HorizontalAlignment="Center" Margin="36,0"/>
                <Label Content="ERRO" HorizontalAlignment="Center" Margin="36,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad1" Margin="12,0"/>
                <TextBox x:Name="txtRead1" Margin="12,0"/>
                <TextBox x:Name="txtError1" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad2" Margin="12,0"/>
                <TextBox x:Name="txtRead2" Margin="12,0"/>
                <TextBox x:Name="txtError2" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad3" Margin="12,0"/>
                <TextBox x:Name="txtRead3" Margin="12,0"/>
                <TextBox x:Name="txtError3" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad4" Margin="12,0"/>
                <TextBox x:Name="txtRead4" Margin="12,0"/>
                <TextBox x:Name="txtError4" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad5" Margin="12,0"/>
                <TextBox x:Name="txtRead5" Margin="12,0"/>
                <TextBox x:Name="txtError5" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad6" Margin="12,0"/>
                <TextBox x:Name="txtRead6" Margin="12,0"/>
                <TextBox x:Name="txtError6" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad7" Margin="12,0"/>
                <TextBox x:Name="txtRead7" Margin="12,0"/>
                <TextBox x:Name="txtError7" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad8" Margin="12,0"/>
                <TextBox x:Name="txtRead8" Margin="12,0"/>
                <TextBox x:Name="txtError8" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad9" Margin="12,0"/>
                <TextBox x:Name="txtRead9" Margin="12,0"/>
                <TextBox x:Name="txtError9" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad10" Margin="12,0"/>
                <TextBox x:Name="txtRead10" Margin="12,0"/>
                <TextBox x:Name="txtError10" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad11" Margin="12,0"/>
                <TextBox x:Name="txtRead11" Margin="12,0"/>
                <TextBox x:Name="txtError11" Margin="12,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="txtLoad12" Margin="12,0"/>
                <TextBox x:Name="txtRead12" Margin="12,0"/>
                <TextBox x:Name="txtError12" Margin="12,0"/>
            </StackPanel>


        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="7" Grid.Column="7" Grid.ColumnSpan="3" Grid.RowSpan="4" Background="{StaticResource SecondaryBrush}" Margin="16,60,16,60">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Selecione os pesos:"/>
                <Button x:Name="btnWeights" Content="PESOS" Margin="36,0"/>
            </StackPanel>
            <Grid x:Name="gdWeights">
                
            </Grid>
        </StackPanel>
    </Grid>
</Window>
